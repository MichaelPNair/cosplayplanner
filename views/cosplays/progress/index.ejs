<div class="show-grid">

    <div>
        <a href="/cosplays/<%= cosplay.cos_id %>">

            <img src="<%= cosplay.picture_url %> " alt="<%= cosplay.name %>">
        </a>
    </div>
    <div class="text-box">
        <h2><%= cosplay.name %></h3>
        <h2><%= cosplay.source %></h3>
    </div>
</div>

<a class="add-cosplay button" href="/cosplays/<%= cosId %>/progress/new">+ add progress picture</a>

<section class="all-cosplays">

    <% for (let progressPic of progressPics) { %>
    
        <div class="ui-card">
            <a href="<%= progressPic.picture_url %>"><img src="<%= progressPic.picture_url %>" alt="<%= progressPic.name %>"></a>
            <section class="content">
                <h2><%= progressPic.name %></h2>
            </section>
            <footer class="content">
                <span><a href="/cosplays/<%= cosId %>/progress/<%= progressPic.progress_pic_id %>/edit">Edit</a></span>
                <span><a href="/cosplays/<%= cosId %>/progress/<%= progressPic.progress_pic_id %>/ConfirmDelete">Delete</a></span>
            </footer>
        </div>
    
    <% } %>

</section>