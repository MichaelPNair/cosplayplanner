<div class="show-grid">

    <div>
        <a href="/cosplays/<%= cosplay.cos_id %>">

            <img src="<%= cosplay.picture_url %> " alt="<%= cosplay.name %>">
        </a>
    </div>
    <div class="text-box">
        <h2><%= cosplay.name %></h3>
        <h2><%= cosplay.source %></h3>
    </div>
</div>

<h2>New Progress Picture</h2>


<form action="/cosplays/<%= cosId %>/progress" method="post">
    <div class="inputs">
        <label for="">Name</label>
        <input type="text" name="name">
    </div>
    <div class="inputs">
        <label for="">Picture URL</label>
        <input type="text" name="picture_url">
    </div>
    <button class="reduced-margin button large-button" type="submit">Add new progress picture</button>
</form>

<a class="reduced-margin button" href="/cosplays/<%= cosplay.cos_id %>/progress">Cancel</a>