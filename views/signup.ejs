<h2>Sign Up</h2>

<form action="" method="post">
    <div class="inputs">
        <label for="">Username</label>
        <input type="text" name="username">
    </div>
    <div class="inputs">
        <label for="">Password</label>
        <input type="password" name="password">
    </div>
    <button class="reduced-margin button">Sign Up</button>
</form>

<% if(usernameTaken){ %>
<h2>Username has already been taken. Please choose a different username.</h2>
<% } %>